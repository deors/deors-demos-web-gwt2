<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>deors.demos.web.gwt2</display-name>

    <!-- Servlets -->
    <servlet>
        <servlet-name>getProductsServiceImpl</servlet-name>
        <servlet-class>deors.demos.web.gwt2.server.services.GetProductsServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getProductNamesServiceImpl</servlet-name>
        <servlet-class>deors.demos.web.gwt2.server.services.GetProductNamesServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getProductByNameServiceImpl</servlet-name>
        <servlet-class>deors.demos.web.gwt2.server.services.GetProductByNameServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>placeOrderService</servlet-name>
        <servlet-class>deors.demos.web.gwt2.server.services.PlaceOrderServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getProductsServiceImpl</servlet-name>
        <url-pattern>/deors.demos.web.gwt2.ProductList/getProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getProductNamesServiceImpl</servlet-name>
        <url-pattern>/deors.demos.web.gwt2.ProductList/getProductNames</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getProductByNameServiceImpl</servlet-name>
        <url-pattern>/deors.demos.web.gwt2.ProductList/getProductByName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>placeOrderService</servlet-name>
        <url-pattern>/deors.demos.web.gwt2.ProductList/placeOrderService</url-pattern>
    </servlet-mapping>

    <!-- Default page -->
    <welcome-file-list>
        <welcome-file>ProductList.html</welcome-file>
    </welcome-file-list>

</web-app>
